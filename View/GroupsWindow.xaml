<Window x:Class="View.GroupsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="GroupsWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="groupComboBox" Height="50" Width="Auto" VerticalAlignment="Top" DisplayMemberPath="Title">
        </ComboBox>
        <Button x:Name="openButton" Content="Открыть" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="50" Width="100" Margin="10"  Click="openButton_Click"/>
    </Grid>
</Window>
