<Window x:Class="View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Логин:" Margin="5,0,0,0"/>
        <TextBox x:Name="loginBox" Margin="5" Height="20" Width="250"/>
        <TextBlock Text="Пароль:" Margin="5,0,0,0"/>
        <TextBox x:Name="passwordBox" Margin="5" Height="20" Width="250"/>
        <Button Margin="20" Height="20" Width="100" Content="Войти" Click="Button_Click"/>
    </StackPanel>
</Window>
